<div class="row">
   <div class="col-md-10 col-md-offset-2">

    <h2> 購物車 </h2>
 
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>商品圖片</th>
          <th>商品名稱</th>
          <th>商品數量</th>
          <th>商品單價</th>
          <th>商品總價</th>
          <th>取消購買</th>
        </tr>
      </thead>
      <tbody>
        <% current_cart.cart_items.each do |item| %>
        <tr>
          <td><%= render_product_photo(item.product.default_photo) %></td>
          <td><%= link_to(item.product.title, admin_product_path(item.product)) %></td>
          <td>
              <%= simple_form_for item, :url => cart_item_path(current_cart, item) do |f| %>
                <%= f.input_field :quantity , :default => item.quantity %>
                <%= button_tag(type: 'submit', class: "btn btn-default btn-xs") do %>
                   <i class="glyphicon glyphicon-repeat"></i> 
                <% end %>
              <% end -%>
          </td>
          <td><%= item.product.price %></td>
          <td><%= item.product.price * item.quantity %></td>
          <td><%= link_to cart_item_path(current_cart, item), :method => :delete do %>
            <i class="glyphicon glyphicon-trash"></i>
              <% end %>
          </td>
        </tr>
        <% end %>
        </tbody>
      </table>
 
      <div class="total group">
        <span class="pull-right">
           <span> 總計 <%= render_cart_total_price(current_cart) %> NTD  
        </span>
      </div>
  
      <hr>

      <div class="checkout">
          <%= render_empty_cart_button(current_cart) %>
          <%= link_to("確認結賬", checkout_carts_path , :method => :post , :class => "btn btn-primary btn-lg pull-right") %>
      </div>
 
 
    </div>
 
 
  </div>